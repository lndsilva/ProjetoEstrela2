<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7a698"
    android:orientation="vertical"
    tools:context=".CadastroActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/search"
        android:hint="Buscar produto..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/corTexto"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <View
                android:id="@+id/caixa"
                android:layout_width="150dp"
                android:layout_height="193dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#d57064" />

            <EditText
                android:id="@+id/txtPrice"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="Price:" />

            <EditText
                android:id="@+id/txtImageID"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/txtPrice"
                android:layout_below="@+id/txtPrice"
                android:hint="Image ID:" />

            <Button
                android:id="@+id/btnDownload"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/txtImageID"
                android:layout_below="@+id/txtImageID"
                android:layout_marginTop="70dp"
                android:text="Download" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner:"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >



            <View
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#d57064" />

            <View
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#d57064" />

            <View
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#d57064" />

            <View
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#d57064" />

            <View
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#d57064" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>